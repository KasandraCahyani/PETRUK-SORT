#include <iostream>
using namespace std;

int main () {
	int data[100];
	int terkecil, x, p;
	cout<<"Pilihan : \n1. Selection Sort \n2. Bubble Sort"<<endl;
	cin>>p;
	cout<<endl;
	
	if (p==1) {
		cout<<"Masukkan jumlah data : ";
		cin>>x;
		
		for (int i=0;i<x;i++) {
			cin>>data[i];
		}
		
		for (int i=0;i<x;i++) {
			terkecil=i;
			for (int j=i;j<x;j++) {
				if (data[j] < data[terkecil]) {
					terkecil=j;
				}
			} swap(data[i],data[terkecil]);
		}
		
		for(int i=0;i<x;i++) {
			cout<<data[i]<<" ";
		}
		
	} else {
		cout<<"Masukkan jumlah data : ";
		cin>>x;
		for (int i=0;i<x;i++) {
			cin>>data[i];
		}
		
		for (int i=x;i>=0;i--) {
			for(int j=0;j<i;j++) {
    			if(data[j]>data[j+1]) {
    				swap(data[j],data[j+1]);
       			}
			}
		}
		
		for (int i=0;i<x;i++) {
			cout<<data[i]<<" ";
		}
		
	}
	return 0;
}
